pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Terraform Operation') {
            steps {
                script {
                    def userInput = input(
                        id: 'terraform-operation',
                        message: 'Select Terraform operation:',
                        parameters: [
                            choice(choices: ['apply', 'destroy'], description: 'Select operation to perform')
                        ]
                    )
                    if (userInput == 'apply') {
                        dir("/var/lib/jenkins/workspace/${JOB_NAME}/EC2") {
                            sh "ls -la"
                            sleep 10
                            sh 'terraform init'
                            sh 'terraform plan'
                            sh 'terraform apply --auto-approve'
                        }
                    } else if (userInput == 'destroy') {
                        dir("/var/lib/jenkins/workspace/${JOB_NAME}/EC2") {
                            sleep 5
                            sh 'terraform destroy --auto-approve'
                        }
                    } else {
                        error "Invalid choice: ${userInput}"
                    }
                }
            }
        }
    }
}
